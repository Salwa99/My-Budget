<h1>New Category</h1>

<%= form_for @category do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true %>
  </div>
  <div class="field">
  <%= f.label :icon %><br>
  <%= f.select :icon, { "House": "House", "Health": "Health", "Food": "Food", "School": "School", "Gym": "Gym" }%>
</div>
  <div class="actions">
    <%= f.submit "Create Category" %>
  </div>
<% end %>

<%= link_to "Back", :back, class: "btn btn-secondary" %>

